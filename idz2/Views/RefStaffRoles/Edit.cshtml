@model idz2.Models.RefStaffRoles

@{
    ViewData["Title"] = "Редактирование роли сотрудника";
}

<h1>Редактирование</h1>

<h4>Роли сотрудника</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffRoleCode" />
            <div class="form-group">
                <label asp-for="StaffRoleDescription" class="control-label"></label>
                <input asp-for="StaffRoleDescription" class="form-control" />
                <span asp-validation-for="StaffRoleDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
