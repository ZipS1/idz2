@model idz2.Models.DocumentsProcesses

@{
    ViewData["Title"] = "Создание – Процессы документов";
}

<h1>Создание</h1>

<h4>Процессы документов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentId" class="control-label"></label>
                <select asp-for="DocumentId" class ="form-control" asp-items="ViewBag.DocumentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProcessId" class="control-label"></label>
                <select asp-for="ProcessId" class ="form-control" asp-items="ViewBag.ProcessId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProcessOutcomeCode" class="control-label"></label>
                <select asp-for="ProcessOutcomeCode" class ="form-control" asp-items="ViewBag.ProcessOutcomeCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProcessStatusCode" class="control-label"></label>
                <select asp-for="ProcessStatusCode" class ="form-control" asp-items="ViewBag.ProcessStatusCode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
