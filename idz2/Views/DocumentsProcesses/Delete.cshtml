@model idz2.Models.DocumentsProcesses

@{
    ViewData["Title"] = "Удаление процесса документа";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Процессы документа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documents)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documents.DocumentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BusinessProcesses)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BusinessProcesses.ProcessId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessOutcomes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessOutcomes.ProcessOutcomeCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessStatus.ProcessStatusCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DocumentId" />
        <input type="hidden" asp-for="ProcessId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
