@model idz2.Models.StaffInProcesses

@{
    ViewData["Title"] = "Редактирование сотрудника в процессе";
}

<h1>Редактирование</h1>

<h4>Сотрудники в процессе</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentId" />
            <input type="hidden" asp-for="ProcessId" />
            <input type="hidden" asp-for="StaffId" />
            <div class="form-group">
                <label asp-for="StaffRoleCode" class="control-label"></label>
                <select asp-for="StaffRoleCode" class="form-control" asp-items="ViewBag.StaffRoleCode"></select>
                <span asp-validation-for="StaffRoleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label"></label>
                <input asp-for="DateFrom" class="form-control" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input asp-for="DateTo" class="form-control" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherDetails" class="control-label"></label>
                <input asp-for="OtherDetails" class="form-control" />
                <span asp-validation-for="OtherDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
