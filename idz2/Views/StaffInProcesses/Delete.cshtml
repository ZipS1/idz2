@model idz2.Models.StaffInProcesses

@{
    ViewData["Title"] = "Удаление сотрудника в процессе";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <h4>Сотрудники в процессе</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OtherDetails)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OtherDetails)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentsProcesses)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocumentsProcesses.DocumentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Staff)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RefStaffRoles)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RefStaffRoles.StaffRoleCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DocumentId" />
        <input type="hidden" asp-for="ProcessId" />
        <input type="hidden" asp-for="StaffId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
