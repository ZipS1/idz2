@model IEnumerable<idz2.Models.Documents>

@{
    ViewData["Title"] = "Список – Документы";
}

<h1>Документы</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.AuthorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocumentId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.DocumentId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.DocumentId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
