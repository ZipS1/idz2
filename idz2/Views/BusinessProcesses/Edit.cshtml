@model idz2.Models.BusinessProcesses

@{
    ViewData["Title"] = "Редактирование бизнес-процесса";
}

<h1>Редактирование</h1>

<h4>Бизнес-процессы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProcessId" />
            <div class="form-group">
                <label asp-for="NextProcessId" class="control-label"></label>
                <select asp-for="NextProcessId" class="form-control" asp-items="ViewBag.NextProcessId"></select>
                <span asp-validation-for="NextProcessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessName" class="control-label"></label>
                <input asp-for="ProcessName" class="form-control" />
                <span asp-validation-for="ProcessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessDescription" class="control-label"></label>
                <input asp-for="ProcessDescription" class="form-control" />
                <span asp-validation-for="ProcessDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherDetails" class="control-label"></label>
                <input asp-for="OtherDetails" class="form-control" />
                <span asp-validation-for="OtherDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
