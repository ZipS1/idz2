@model IEnumerable<idz2.Models.ProcessStatus>

@{
    ViewData["Title"] = "Список – Статусы процесса";
}

<h1>Статусы процесса</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProcessStatusDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessStatusDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProcessStatusCode">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.ProcessStatusCode">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.ProcessStatusCode">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
